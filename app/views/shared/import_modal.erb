<div id="import-album-modal" class="modal hide fade">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Import Album(s)</h3>
  </div>
  <div class="modal-body">
    <form class="autocomplete">
      <% @dirs.each do |dir| %>
        <input type="hidden" value="<%= dir %>" />
      <% end %>
    </form>
    <form class="import-album" action="/albums/create" method="POST">
      <fieldset>
        <div class="clearfix">
          <label for="album-path">folder</label>
          <div class="input">
            <input class="album-path span5" id="album-path" name="album-path" size="30" type="text" data-provide="typeahead" />
          </div>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="modal-footer">
    <a class="btn primary" href="#">Import</a>
    <a class="btn" href="#" data-dismiss="modal">Close</a>
  </div>
</div>
