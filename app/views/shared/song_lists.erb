<div id="library">
  <div class="top-bar">
    <div class="container">
      <div class="row">
        <div class="span8 controls">
          <ul class="unstyled">
            <li>
              <a href="#import-album-modal" data-toggle="modal" class="import-album sprite-icons-Add"></a>
            </li>
            <li>
              <a href="/stats" class="stats sprite-icons-List2"></a>
            </li>
            <li>
              <a href="#" class="sprite-icons-Search"></a>
            </li>
          </ul>
        </div>
        <div class="span8 selected-album"></div>
      </div>
    </div>
  </div>
  <div class="album-listing container">
    <%= erb :"shared/import_modal" %>
    <%= erb :"shared/flash" %>
    <div class="row">
      <div class="span16">
        <ul class="media-grid">
          <% @song_lists.each do |list| %>
            <li <%= list.respond_to?(:artist) ? "data-artist=\"#{list.artist.name}\" data-album=\"#{list.title}\"" : "data-playlist=\"#{list.title}\""%>>
              <a href="<%= list.url %>" style="background: url('<%= list.thumbnail %>');"></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
